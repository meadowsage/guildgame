<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meadowsage.guildgame.mapper.QuestMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="quest.id">
        INSERT INTO quest (world_id,
                           type,
                           difficulty)
        VALUES (#{worldId},
                #{quest.type},
                #{quest.difficulty})
    </insert>

    <select id="select" resultType="com.meadowsage.guildgame.model.Quest">
        SELECT *
        FROM quest
        WHERE world_id = #{worldId}
    </select>
</mapper>